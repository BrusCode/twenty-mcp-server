# Twenty MCP Server Configuration

# Single Workspace (Simple)
# Use these if you have only one Twenty CRM instance
TWENTY_BASE_URL=https://your-domain.com
TWENTY_API_KEY=your_api_key_here

# Multiple Workspaces (Advanced)
# Use this if you have multiple Twenty CRM instances
# Format as JSON string
TWENTY_WORKSPACES='{"workspaces": [{"name": "main", "base_url": "https://domain1.com", "api_key": "key1"}, {"name": "secondary", "base_url": "https://domain2.com", "api_key": "key2"}]}'

# Server Configuration (optional)
TWENTY_LOG_LEVEL=INFO
TWENTY_TIMEOUT=30

# Rate Limiting (optional - will be auto-detected from API)
TWENTY_RATE_LIMIT=100
